            </DrawingImage.Drawing>
        </DrawingImage>
        <DrawingImage x:Key="CastingActive"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
            <DrawingImage.Drawing>
                <GeometryDrawing Brush="{StaticResource ButtonTextGradientOver}"
                                 Geometry="M21,17H3V5H21M21,3H3A2,2 0 0,0 1,5V17A2,2 0 0,0 3,19H8V21H16V19H21A2,2 0 0,0 23,17V5A2,2 0 0,0 21,3Z" />
            </DrawingImage.Drawing>
        </DrawingImage>
        <DrawingImage x:Key="PreviousNormal"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
            <DrawingImage.Drawing>
                <GeometryDrawing Brush="{StaticResource ButtonTextGradient}"
                                 Geometry="M6,18V6H8V18H6M9.5,12L18,6V18L9.5,12Z" />
            </DrawingImage.Drawing>
        </DrawingImage>
        <DrawingImage x:Key="PreviousActive"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
            <DrawingImage.Drawing>
                <GeometryDrawing Brush="{StaticResource ButtonTextGradientOver}"
                                 Geometry="M6,18V6H8V18H6M9.5,12L18,6V18L9.5,12Z" />
            </DrawingImage.Drawing>
        </DrawingImage>
        <DrawingImage x:Key="PlayNormal"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
            <DrawingImage.Drawing>
                <GeometryDrawing Brush="{StaticResource ButtonTextGradient}"
                                 Geometry="M8.5,8.64L13.77,12L8.5,15.36V8.64M6.5,5V19L17.5,12" />
            </DrawingImage.Drawing>
        </DrawingImage>
        <DrawingImage x:Key="PlayActive"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
            <DrawingImage.Drawing>
                <GeometryDrawing Brush="{StaticResource ButtonTextGradientOver}"
                                 Geometry="M8.5,8.64L13.77,12L8.5,15.36V8.64M6.5,5V19L17.5,12" />
            </DrawingImage.Drawing>
        </DrawingImage>
        <DrawingImage x:Key="PauseNormal"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
            <DrawingImage.Drawing>
                <GeometryDrawing Brush="{StaticResource ButtonTextGradient}"
                                 Geometry="M14,19H18V5H14M6,19H10V5H6V19Z" />
            </DrawingImage.Drawing>
        </DrawingImage>
        <DrawingImage x:Key="PauseActive"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
            <DrawingImage.Drawing>
                <GeometryDrawing Brush="{StaticResource ButtonTextGradientOver}"
                                 Geometry="M14,19H18V5H14M6,19H10V5H6V19Z" />
            </DrawingImage.Drawing>
        </DrawingImage>
        <DrawingImage x:Key="NextNormal"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
            <DrawingImage.Drawing>
                <GeometryDrawing Brush="{StaticResource ButtonTextGradient}"
                                 Geometry="M16,18H18V6H16M6,18L14.5,12L6,6V18Z" />
            </DrawingImage.Drawing>
        </DrawingImage>
        <DrawingImage x:Key="NextActive"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
            <DrawingImage.Drawing>
                <GeometryDrawing Brush="{StaticResource ButtonTextGradientOver}"
                                 Geometry="M16,18H18V6H16M6,18L14.5,12L6,6V18Z" />
            </DrawingImage.Drawing>
        </DrawingImage>
    </Window.Resources>
    <Grid>
        <MediaElement HorizontalAlignment="Left"
                      VerticalAlignment="Top"
                      Volume="{Binding SoundVolume}"
                      x:Name="AudioPlayer"
                      LoadedBehavior="Manual"
                      UnloadedBehavior="Manual"
                      MediaEnded="AudioPlayer_MediaEnded" />
        <vlc:VideoView x:Name="Animation"
                       Focusable="True">
            <Grid  x:Name="VideoBox"
                   
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top">
                <Viewbox>
                    <Canvas Width="1920"
                            Height="1080"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            x:Name="OverlayCanvas"
                            PreviewMouseMove="ObjectMouseMove"
                            Background="#01000000"
                            MouseDown="OverlayCanvas_MouseDown">
                        <Line x:Name="VerticalLine" Visibility="Collapsed"
                              Panel.ZIndex="999" SnapsToDevicePixels="True" Stroke="Aquamarine"
                              Y2="1080" />
                        <Line x:Name="HorizontalLine"
                              Panel.ZIndex="999"
                              Visibility="Collapsed"
                              SnapsToDevicePixels="True"
                              Stroke="Aquamarine"
                              X2="1920" />
                        <Image x:Name="PreviewImage" />
                        <Grid x:Name="gBrandLogo"
                              MouseLeftButtonDown="ObjectMouseDown"
                              Panel.ZIndex="1"
                              MouseLeftButtonUp="ObjectMouseUp">
                            <Grid.Triggers>
                                <EventTrigger RoutedEvent="MouseEnter">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.Target="{Binding Source={x:Reference sBrandLogo}}"
                                                             Storyboard.TargetProperty="Opacity"
                                                             To="1"
                                                             Duration="0:0:0.8">
                                                <DoubleAnimation.EasingFunction>
                                                    <CircleEase EasingMode="EaseOut" />
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                                <EventTrigger RoutedEvent="MouseLeave">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.Target="{Binding Source={x:Reference sBrandLogo}}"
                                                             Storyboard.TargetProperty="Opacity"
                                                             To="0"
                                                             Duration="0:0:0.8">
                                                <DoubleAnimation.EasingFunction>
                                                    <CircleEase EasingMode="EaseOut" />
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Grid.Triggers>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>
                            <Image x:Name="iBrandLogo"
                                   Width="405"
                                   RenderOptions.BitmapScalingMode="HighQuality"
                                   RenderTransformOrigin="0.5,0.5">
                                <Image.LayoutTransform>
                                    <TransformGroup>
                                        <ScaleTransform x:Name="stBrandLogo" />
                                    </TransformGroup>
                                </Image.LayoutTransform>
                                <Image.Effect>
                                    <DropShadowEffect BlurRadius="20"
                                                      Direction="-90"
                                                      RenderingBias="Quality"
                                                      ShadowDepth="3"
                                                      Color="#f0000000" />
                                </Image.Effect>
                            </Image>
                            <Slider Name="sBrandLogo"
                                    Width="{Binding ElementName=iBrandLogo, Path=ActualWidth}"
                                    Grid.Row="1"
                                    Focusable="False"
                                    Opacity="0"
                                    VerticalAlignment="Center"
                                    Minimum="-50"
                                    Maximum="50"
                                    SmallChange="1"
                                    Value="0"
                                    ValueChanged="Slider_ValueChanged" />
                        </Grid>
                        <Grid x:Name="gEventLogo"
                              Panel.ZIndex="1"
                              MouseLeftButtonDown="ObjectMouseDown"
                              MouseLeftButtonUp="ObjectMouseUp">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>
                            <Grid.Triggers>
                                <EventTrigger RoutedEvent="MouseEnter">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.Target="{Binding Source={x:Reference sEventLogo}}"
                                                             Storyboard.TargetProperty="Opacity"
                                                             To="1"
                                                             Duration="0:0:0.8">
                                                <DoubleAnimation.EasingFunction>
                                                    <CircleEase EasingMode="EaseOut" />
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                                <EventTrigger RoutedEvent="MouseLeave">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.Target="{Binding Source={x:Reference sEventLogo}}"
                                                             Storyboard.TargetProperty="Opacity"
                                                             To="0"
                                                             Duration="0:0:0.8">
                                                <DoubleAnimation.EasingFunction>
                                                    <CircleEase EasingMode="EaseOut" />
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Grid.Triggers>
                            <Image x:Name="iEventLogo"
                                   Width="700"
                                   RenderOptions.BitmapScalingMode="HighQuality"
                                   
                                   RenderTransformOrigin="0.5,0.5">
                                <Image.LayoutTransform>
                                    <TransformGroup>
                                        <ScaleTransform x:Name="stEventLogo" />
                                    </TransformGroup>
                                </Image.LayoutTransform>
                                <Image.Effect>
                                    <DropShadowEffect BlurRadius="20"
                                                      Direction="-90"
                                                      RenderingBias="Quality"
                                                      ShadowDepth="3"
                                                      Color="#f0000000" />
                                </Image.Effect>
                            </Image>
                            <Slider Name="sEventLogo"
                                    Opacity="0"
                                    Grid.Row="1"
                                    Width="{Binding ElementName=iEventLogo, Path=ActualWidth}"
                                    VerticalAlignment="Center"
                                    Minimum="-50"
                                    Focusable="False"
                                    Maximum="50"
                                    SmallChange="1"
                                    Value="0"
                                    ValueChanged="Slider_ValueChanged_1"></Slider>
                        </Grid>
                        <Grid x:Name="gMapPool"
                              Panel.ZIndex="1"
                              PreviewMouseLeftButtonDown="ObjectMouseDown"
                              PreviewMouseLeftButtonUp="ObjectMouseUp">
                            <Grid.Effect>
                                <DropShadowEffect BlurRadius="20"
                                                  Direction="-90"
                                                  RenderingBias="Quality"
                                                  ShadowDepth="3"
                                                  Color="#f0000000" />
                            </Grid.Effect>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>
                            <Image x:Name="ibMapIcon"
                                   Grid.Row="0"
                                   RenderOptions.BitmapScalingMode="Fant"
                                   Width="258"
                                   Height="258"
                                   Margin="0,10"
                                   VerticalAlignment="Top"
                                   
                                   RenderTransformOrigin="0.5,0.5">
                                <Image.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform x:Name="stMap" />
                                    </TransformGroup>
                                </Image.RenderTransform>
                            </Image>
                            <Grid Grid.Row="1">
                                <Border Style="{DynamicResource OuterBorder}">
                                    <Grid>
                                        <Border Style="{DynamicResource MapPoolInnerFill}"
                                                Width="405"
                                                Height="55"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Bottom">
                                            <Grid Style="{DynamicResource PatternOverlay}" />
                                        </Border>
                                        <TextBlock x:Name="tbMapPool"
                                                   Style="{DynamicResource TextTitle}"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Bottom"
                                                   
                                                   
                                                   FontWeight="Bold"
                                                   Foreground="{StaticResource ButtonTextGradient}"
                                                   Text="">
                                            <TextBlock.Effect>
                                                <DropShadowEffect BlurRadius="3"
                                                                  Direction="-90"
                                                                  RenderingBias="Quality"
                                                                  ShadowDepth="1.7"
                                                                  Color="Black" />
                                            </TextBlock.Effect>
                                            <TextBlock.OpacityMask>
                                                <LinearGradientBrush StartPoint="0,0"
                                                                     EndPoint="0,1">
                                                    <GradientStop x:Name="MapBlackStop"
                                                                  Offset="0"
                                                                  Color="Black" />
                                                    <GradientStop x:Name="MapTransparentStop"
                                                                  Offset="0"
                                                                  Color="Transparent" />
                                                </LinearGradientBrush>
                                            </TextBlock.OpacityMask></TextBlock>
                                        <TextBlock x:Name="tbBO"
                                                   Style="{DynamicResource TextTitle}"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Bottom"
                                                  
                                                   
                                                   FontWeight="Bold"
                                                   Foreground="White"
                                                   Text="">
                                            <TextBlock.Effect>
                                                <DropShadowEffect BlurRadius="3"
                                                                  Direction="-90"
                                                                  RenderingBias="Quality"
                                                                  ShadowDepth="1.7"
                                                                  Color="Black" />
                                            </TextBlock.Effect>
                                            <TextBlock.OpacityMask>
                                                <LinearGradientBrush StartPoint="0,0"
                                                                     EndPoint="0,1">
                                                    <GradientStop x:Name="BOBlackStop"
                                                                  Offset="0"
                                                                  Color="Black" />
                                                    <GradientStop x:Name="BOTransparentStop"
                                                                  Offset="0"
                                                                  Color="Transparent" />
                                                </LinearGradientBrush>
                                            </TextBlock.OpacityMask></TextBlock>
                                    </Grid>
                                </Border>
                            </Grid>
                        </Grid>
                        <Grid x:Name="gCountdown"
                              Panel.ZIndex="1"
                              PreviewMouseLeftButtonDown="ObjectMouseDown"
                              PreviewMouseLeftButtonUp="ObjectMouseUp">
                            <Grid.Effect>
                                <DropShadowEffect BlurRadius="20"
                                                  Direction="-90"
                                                  RenderingBias="Quality"
                                                  ShadowDepth="3"
                                                  Color="#f0000000" />
                            </Grid.Effect>
                            <Border Style="{DynamicResource OuterBorder}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="auto" />
                                    </Grid.RowDefinitions>
                                    <Border Style="{DynamicResource InnerFillBottom}"
                                            Grid.RowSpan="2"
                                            >
                                        <Grid Style="{DynamicResource PatternBlackOverlay}" />
                                    </Border>
                                    <Border Width="405"
                                            Height="55"
                                            Style="{DynamicResource InnerFillTop}"
                                            Margin="0,0,0,0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Bottom">
                                        <Grid Style="{DynamicResource PatternOverlay}" />
                                    </Border>
                                    <Image Width="405"
                                           Style="{DynamicResource Divider}"
                                           VerticalAlignment="Bottom"
                                           Source="/resources/images/campaignmenu/LevelSelectDivider.png"
                                           Stretch="Fill" />
                                    <TextBlock Style="{DynamicResource TextTitle}"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Bottom"
                                               
                                               
                                               FontWeight="Bold"
                                               
                                               Foreground="{StaticResource ButtonTextGradient}"
                                               Text="{DynamicResource Countdown}">
                                        <TextBlock.Effect>
                                            <DropShadowEffect BlurRadius="3"
                                                              Direction="-90"
                                                              RenderingBias="Quality"
                                                              ShadowDepth="1.7"
                                                              Color="Black" />
                                        </TextBlock.Effect></TextBlock>
                                    <TextBlock x:Name="lTimer"
                                               Grid.Row="1"
                                               Margin="0,15,0,5"
                                               HorizontalAlignment="Center"
                                               FontFamily="/Fonts/#Trajan Pro 3"
                                               FontSize="60"
                                               Foreground="White"
                                               Text="{Binding Time}"></TextBlock>
                                    <StackPanel HorizontalAlignment="Center"
                                                Grid.Row="1"
                                                x:Name="WaitingAnimation"
                                                Orientation="Horizontal">
                                        <Ellipse x:Name="Dot1"
                                                 Fill="{StaticResource ButtonStrokeGradient}"
                                                 Opacity=".4"
                                                 Width="8"
                                                 Height="8"
                                                 RenderTransformOrigin="0.5,0.5">
                                            <Ellipse.RenderTransform>
                                                <ScaleTransform x:Name="scaleDot1" />
                                            </Ellipse.RenderTransform>
                                        </Ellipse>
                                        <Ellipse x:Name="Dot2"
                                                 Fill="{StaticResource ButtonStrokeGradient}"
                                                 Opacity=".4"
                                                 Width="8"
                                                 Height="8"
                                                 Margin="24,0,0,0"
                                                 RenderTransformOrigin="0.5,0.5">
                                            <Ellipse.RenderTransform>
                                                <ScaleTransform x:Name="scaleDot2" />
                                            </Ellipse.RenderTransform>
                                        </Ellipse>
                                        <Ellipse x:Name="Dot3"
                                                 Fill="{StaticResource ButtonStrokeGradient}"
                                                 Opacity=".4"
                                                 Width="8"
                                                 Height="8"
                                                 Margin="24,0,0,0"
                                                 RenderTransformOrigin="0.5,0.5">
                                            <Ellipse.RenderTransform>
                                                <ScaleTransform x:Name="scaleDot3" />
                                            </Ellipse.RenderTransform>
                                        </Ellipse>
                                        <Ellipse x:Name="Dot4"
                                                 Fill="{StaticResource ButtonStrokeGradient}"
                                                 Opacity=".4"
                                                 Width="8"
                                                 Height="8"
                                                 Margin="24,0,0,0"
