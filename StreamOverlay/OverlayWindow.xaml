<Window x:Name="main"
        x:Class="StreamOverlay.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:StreamOverlay"
        
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vlc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
        Title="Stream Overlay"
        Width="1920"
        Height="1080"
        Background="Black"
        Closed="Window_Closed"
        ResizeMode="NoResize"
        UseLayoutRounding="True"
        WindowState="Maximized"
        WindowStyle="None"
        Focusable="True"
        FocusManager.FocusedElement="{Binding ElementName=Animation}"
        mc:Ignorable="d">
    <Window.Resources>
        <Storyboard RepeatBehavior="Forever"
                    x:Key="wait">
            <DoubleAnimation Storyboard.TargetName="Dot1"
                             BeginTime="0:0:0.1"
                             Storyboard.TargetProperty="Opacity"
                             From=".4"
                             To="1"
                             AutoReverse="True"
                             Duration="0:0:0.8" />
            <DoubleAnimation Storyboard.TargetName="scaleDot1"
                             BeginTime="0:0:0.1"
                             Storyboard.TargetProperty="ScaleX"
                             From="1"
                             To="3"
                             AutoReverse="True"
                             Duration="0:0:0.8" />
            <DoubleAnimation Storyboard.TargetName="scaleDot1"
                             BeginTime="0:0:0.1"
                             Storyboard.TargetProperty="ScaleY"
                             From="1"
                             To="3"
                             AutoReverse="True"
                             Duration="0:0:0.8" />
            <DoubleAnimation Storyboard.TargetName="Dot2"
                             BeginTime="0:0:0.2"
                             Storyboard.TargetProperty="Opacity"
                             From=".4"
                             To="1"
                             AutoReverse="True"
                             Duration="0:0:0.8" />
            <DoubleAnimation Storyboard.TargetName="scaleDot2"
                             BeginTime="0:0:0.2"
                             Storyboard.TargetProperty="ScaleX"
                             From="1"
                             To="3"
                             AutoReverse="True"
                             Duration="0:0:0.8" />
            <DoubleAnimation Storyboard.TargetName="scaleDot2"
                             BeginTime="0:0:0.2"
                             Storyboard.TargetProperty="ScaleY"
                             From="1"
                             To="3"
                             AutoReverse="True"
                             Duration="0:0:0.8" />
            <DoubleAnimation Storyboard.TargetName="Dot3"
                             BeginTime="0:0:0.3"
                             Storyboard.TargetProperty="Opacity"
                             From=".4"
                             To="1"
                             AutoReverse="True"
                             Duration="0:0:0.8" />
            <DoubleAnimation Storyboard.TargetName="scaleDot3"
                             BeginTime="0:0:0.3"
                             Storyboard.TargetProperty="ScaleX"
                             From="1"
                             To="3"
                             AutoReverse="True"
                             Duration="0:0:0.8" />
            <DoubleAnimation Storyboard.TargetName="scaleDot3"
                             BeginTime="0:0:0.3"
                             Storyboard.TargetProperty="ScaleY"
                             From="1"
                             To="3"
                             AutoReverse="True"
                             Duration="0:0:0.8" />
            <DoubleAnimation Storyboard.TargetName="Dot4"
                             BeginTime="0:0:0.4"
                             Storyboard.TargetProperty="Opacity"
                             From=".4"
                             To="1"
                             AutoReverse="True"
                             Duration="0:0:0.8" />
            <DoubleAnimation Storyboard.TargetName="scaleDot4"
                             BeginTime="0:0:0.4"
                             Storyboard.TargetProperty="ScaleX"
                             From="1"
                             To="3"
                             AutoReverse="True"
                             Duration="0:0:0.8" />
            <DoubleAnimation Storyboard.TargetName="scaleDot4"
                             BeginTime="0:0:0.4"
                             Storyboard.TargetProperty="ScaleY"
                             From="1"
                             To="3"
                             AutoReverse="True"
                             Duration="0:0:0.8" />
            <DoubleAnimation Storyboard.TargetName="Dot5"
                             BeginTime="0:0:0.5"
                             Storyboard.TargetProperty="Opacity"
                             From=".4"
                             To="1"
                             AutoReverse="True"
                             Duration="0:0:0.8" />
            <DoubleAnimation Storyboard.TargetName="scaleDot5"
                             BeginTime="0:0:0.5"
                             Storyboard.TargetProperty="ScaleX"
                             From="1"
                             To="3"
                             AutoReverse="True"
                             Duration="0:0:0.8" />
            <DoubleAnimation Storyboard.TargetName="scaleDot5"
                             BeginTime="0:0:0.5"
                             Storyboard.TargetProperty="ScaleY"
                             From="1"
                             To="3"
                             AutoReverse="True"
                             Duration="0:0:0.8" />
            <DoubleAnimation Storyboard.TargetName="Dot6"
                             BeginTime="0:0:0.6"
                             Storyboard.TargetProperty="Opacity"
                             From=".4"
                             To="1"
                             AutoReverse="True"
                             Duration="0:0:0.8" />
            <DoubleAnimation Storyboard.TargetName="scaleDot6"
                             BeginTime="0:0:0.6"
                             Storyboard.TargetProperty="ScaleX"
                             From="1"
                             To="3"
                             AutoReverse="True"
                             Duration="0:0:0.8" />
            <DoubleAnimation Storyboard.TargetName="scaleDot6"
                             BeginTime="0:0:0.6"
                             Storyboard.TargetProperty="ScaleY"
                             From="1"
                             To="3"
                             AutoReverse="True"
                             Duration="0:0:0.8" />
        </Storyboard>
        <local:CIVS x:Key="CivPool" />
        <DrawingImage x:Key="LoopNormal"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
